{
  "name": "perspective-studio-electron",
  "version": "0.1.1-beta.1",
  "license": "MIT",
  "private": false,
  "description": "Electron + React (Vite) port of Perspective Studio (LM Studioâ€“like)",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "concurrently -k \"tsc -p tsconfig.electron.json -w\" \"tsc -p tsconfig.electron-preload.json -w\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 dist/electron/main.js dist/electron/preload.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.electron.json && tsc -p tsconfig.electron-preload.json",
    "build:renderer": "vite build",
    "dist": "npm run dist:build",
    "dist:build": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "dist:win:arm64": "npm run build && electron-builder --win --arm64",
    "dist:win:x64": "npm run build && electron-builder --win --x64",
    "dist:win:all": "npm run build && electron-builder --win --x64 --arm64",
    "start": "electron .",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.electron.json --noEmit && tsc -p tsconfig.electron-preload.json --noEmit",
    "lint": "eslint \"{electron,src}/**/*.{ts,tsx}\"",
    "format": "prettier --write ."
  },
  "build": {
    "appId": "com.perspective.studio",
    "productName": "Perspective Studio",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "afterPack": "build/afterPack.cjs",
    "afterSign": "build/notarize.cjs",
    "mac": {
      "target": ["zip"],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "notarize": false,
      "signIgnore": [
        ".*Electron Framework\\.framework/Versions/[^/]+/Resources/.*",
        ".*\\.lproj/.*",
        ".*\\.pak$"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3",
    "@electron/notarize": "^2.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  }
}


